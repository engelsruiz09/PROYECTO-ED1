@model IEnumerable<PROYECTO_ED1.Models.Pacientes>

@{
    ViewData["Title"] = "lista Pacientes";
}
<div class="container-fluid ">
    <h1 class="text-center display-2">Listado de Pacientes</h1>

    <div class="my-3">
        <p class="text-start">
            <a asp-action="Create_Paciente">Añadir Nuevo paciente</a>
        </p>
    </div>
    <div class="bg-light">
        <h3 class=" text-start display-6"> Filtros</h3>
        <div class="row pb-4">
            <div class="col-md-3">
                <form asp-action="Filtro1" method="post" class="mx-1">
                    <button type="submit" class="btn btn-outline-info">Sin tratamiento</button>
                </form>
            </div>
            <div class="col-md-3">
                <form asp-action="Filtro2" method="post" class="mx-1">
                    <button type="submit" class="btn btn-outline-info">Cognitiva o Conductual</button>
                </form>
            </div>
            <div class="col-md-3">
                <form asp-action="Filtro3" method="post" class="mx-1">
                    <button type="submit" class="btn btn-outline-info">Gestaltica</button>
                </form>
            </div>
            <div class="col-md-3">
                <form asp-action="Filtro4" method="post" class="mx-1">
                    <button type="submit" class="btn btn-outline-info">Logoterapia o Psicodinámica</button>
                </form>
            </div>
        </div>
    </div>


</div>




<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DPI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FDU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FDP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asistencia)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DPI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FDU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FDP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asistencia)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
