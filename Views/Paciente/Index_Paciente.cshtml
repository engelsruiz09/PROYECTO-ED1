@model IEnumerable<PROYECTO_ED1.Models.Pacientes>

@{
    ViewData["Title"] = "Index_Paciente";
}

<h1>Index_Paciente</h1>


<h3 class=" text-start display-6"> Filtros</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Filtro1" method="post" class="mx-2">
            <button type="submit" class="btn btn-outline-info">Sin tratamiento</button>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="Filtro2" method="post" class="mx-2">
            <button type="submit" class="btn btn-outline-info">Cognitiva o Conductual</button>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="Filtro3" method="post" class="mx-2">
            <button type="submit" class="btn btn-outline-info">Gestaltica</button>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="Filtro4" method="post" class="mx-2">
            <button type="submit" class="btn btn-outline-info">Logoterapia o Psicodinámica</button>
        </form>
    </div>
</div>

<p style="text-align:center;color:dimgrey;">
    <a asp-action="Create_Paciente">Nuevo paciente</a>
</p>

